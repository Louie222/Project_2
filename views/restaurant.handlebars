{{!-- Review Format --}}

<div class="box">
  <div class="content">
    <h1>{{restaurant.name}}</h1>
    <p>{{restaurant.description}}</p>
    
  <p>Check out <a href="http://{{restaurant.url}}" target="_blank" rel="noopener noreferrer">{{restaurant.name}}</a></p>
  </div>

</div>


<div class="column is -8 is-variable">
  <div class="is-7-tablet has-text-centered">
    <h3 class="is-size-4 mb-4 title"> Location </h3>
  </div>



  {{#each restaurant.reviews as |review|}}
  <article class="media">
    <div class="media-content">
      <div class="content">
        <div class="box">
          <p>
            <strong>{{review.user.username}}</strong>
            <br>
            {{review.review_content}}
            <br>
            
          </p>
        </div>
      </div>
    </div>
  </article>
  {{/each}}

  {{!-- Review Form Section --}}
  <article class="media">

    <div class="media-content">
      <form class="review-form">
        <div class="field">
          <div class="box">
            <p class="control">
              <textarea id="review-content" class="textarea" placeholder="Add a review..."></textarea>
            </p>
          </div>
        </div>
        <input type="hidden" id="restaurant-id" name="restaurantId" value={{restaurant.id}}>
        <div class="field">
          <div class="box">
            {{#if loggedIn}}
            <p class="control">
              <button class="button" type="submit">Post comment</button>
            </p>
            {{/if}}
            {{#unless loggedIn}}
            <span> <a href="/login">Login</a> or <a href="/signup">Signup</a> to Post Reviews</span>
            {{/unless}}
          </div>

        </div>
      </form>
    </div>
</div>
</article>

<script src="/javascripts/review.js"></script>